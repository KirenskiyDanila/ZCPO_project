{% extends 'base.html.twig' %}

{% block title %}Photo{% endblock %}

{% block body %}
    <div class="container">
    <h1>Photo</h1>
        <img src="../{{photo.path}}" height="250">

    <table class="table">
        <tbody>
            <tr>
                <th>Номер</th>
                <td>{{ photo.id }}</td>
            </tr>
            <tr>
                <th>Имя</th>
                <td>{{ photo.name }}</td>
            </tr>
            <tr>
                <th>Путь к файлу</th>
                <td>{{ photo.path }}</td>
            </tr>
            <tr>
                <th>Формат</th>
                <td>{{ photo.format }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_photo_index') }}">Назад к списку</a>

    <a href="{{ path('app_photo_edit', {'id': photo.id}) }}">Редактировать</a>

    {{ include('photo/_delete_form.html.twig') }}
    </div>
{% endblock %}
