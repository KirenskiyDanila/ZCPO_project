{% extends 'base.html.twig' %}

{% block title %}Photo index{% endblock %}

{% block body %}
    <div class="container">
    <h1>Список фото</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Номер</th>
                <th>Название</th>
                <th>Путь</th>
                <th>Формат</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for photo in photos %}
            <tr>
                <td>{{ photo.id }}</td>
                <td>{{ photo.name }}</td>
                <td>{{ photo.path }}</td>
                <td>{{ photo.format }}</td>
                <td>
                    <a href="{{ path('app_photo_show', {'id': photo.id}) }}">Показать</a>
                    <a href="{{ path('app_photo_edit', {'id': photo.id}) }}">Отредакировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Нет записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_photo_new') }}">Создать новое</a>
    </div>
{% endblock %}
